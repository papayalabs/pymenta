<%= simple_form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :code %>
  <%= f.input :description %>
  <%= f.input :barcode %>
  <%= f.input :brand do %>
    <%= f.collection_select :brand_id, current_user.company.brands, :id, :description %>  
  <% end %>
  <%= f.input :category do %>
    <%= f.collection_select :category_id, current_user.company.categories, :id, :description %>  
  <% end %>
  <%= f.input :units, collection: Product::UNIT_TYPES, prompt: t('.select', :default => t("helpers.links.select")) %>
  <%= f.input :price %>
  <%= f.input :cost %>
  <%= f.input :custom_tax, label: 'Custom Tax (%)' %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn' %>
  </div>
<% end %>
