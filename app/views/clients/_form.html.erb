<%= simple_form_for @client, html: { class: 'space-y-4 max-w-3xl mx-auto' } do |f| %>
  <div class="mb-4">
    <%= f.input :code, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
  </div>
  
  <div class="mb-4">
    <%= f.input :name, input_html: { class: 'shadow appearance-none border rounded w-full md:w-2/3 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
  </div>
  
  <div class="mb-4">
    <%= f.input :id_number1, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
  </div>
  
  <div class="mb-4">
    <%= f.input :address, input_html: { class: 'shadow appearance-none border rounded w-full md:w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div>
      <%= f.input :city, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
    </div>
    <div>
      <%= f.input :state, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
    </div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div>
      <%= f.input :country, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
    </div>
    <div>
      <%= f.input :zip_code, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
    </div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div>
      <%= f.input :telephone, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
    </div>
    <div>
      <%= f.input :fax, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
    </div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
    <div>
      <%= f.input :email, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
    </div>
    <div>
      <%= f.input :web, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
    </div>
  </div>
  
  <div class="mb-4">
    <%= f.input :contact, input_html: { class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
  </div>
  
  <div class="mb-6">
    <%= f.input :observations, input_html: { class: 'shadow appearance-none border rounded w-full md:w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' }, wrapper_html: { class: 'mb-4' } %>
  </div>
  
  <div class="flex space-x-2 mt-6">
    <%= f.button :submit, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>
<% end %>