<body id="page-top" class="bg-white">
    <nav class="fixed top-0 left-0 right-0 z-50 bg-gray-900 shadow">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div>
                    <a class="text-3xl font-bold text-white" href="#page-top">PYMENTA</a>
                </div>
                
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button id="mobile-menu-button" type="button" class="text-gray-300 hover:text-white focus:outline-none">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
                
                <!-- Desktop menu -->
                <div class="hidden md:flex md:items-center md:space-x-4">
                    <a class="text-gray-300 hover:text-white px-3 py-2" href="#about"><%=t '.ourproduct' %></a>
                    <a class="text-gray-300 hover:text-white px-3 py-2" href="#tour"><%=t '.tour' %></a>
                    <a class="text-gray-300 hover:text-white px-3 py-2" href="#pricing"><%=t '.prices' %></a>
                    <a class="text-gray-300 hover:text-white px-3 py-2" href="#contact"><%=t '.contact' %></a>
                    <%= link_to t("helpers.links.sign_in"), new_user_session_path, class: "text-gray-300 hover:text-white px-3 py-2" %>
                    <%= link_to t("helpers.links.sign_up"), new_user_registration_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
                </div>
            </div>
            
            <!-- Mobile menu, hidden by default -->
            <div id="mobile-menu" class="hidden">
                <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                    <a class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium" href="#about"><%=t '.ourproduct' %></a>
                    <a class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium" href="#tour"><%=t '.tour' %></a>
                    <a class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium" href="#pricing"><%=t '.prices' %></a>
                    <a class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium" href="#contact"><%=t '.contact' %></a>
                    <%= link_to t("helpers.links.sign_in"), new_user_session_path, class: "text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium" %>
                    <%= link_to t("helpers.links.sign_up"), new_user_registration_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded block w-full text-center" %>
                </div>
            </div>
        </div>
    </nav>

    <section class="intro">
        <div class="intro-body">
            <div class="container mx-auto px-4">
                <div class="flex justify-center">
                    <div class="md:w-2/3 text-center">
                        <% if flash[:notice] %>
                          <h1 class="text-4xl font-bold text-white"><%= flash[:notice] %></h1>
                        <% end %>
                        <h1 class="text-4xl font-bold text-white"><%=t '.title' %></h1>
                        <p class="text-xl text-white"><%=t '.title2' %></p>
                        <div class="mt-8">
                            <a href="#about" class="inline-block rounded-full bg-white p-3 hover:bg-gray-200">
                                <%= image_tag("arrow.png", class: "h-6 w-6") %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="about" class="py-20">
        <div class="container mx-auto px-4">
            <div class="flex justify-center">
                <div class="lg:w-2/3 text-center">
                      <h2 class="text-3xl font-bold mb-6"><%=t '.ourproduct' %></h2>      
                      <p class="text-xl mb-6"><%=t '.description', :default => 'Pymenta is a very simple Rails Cloud ERP System created for small companies to create, manage and print documents ( invoices, notes, quotations, credits, etc). You can manage warehouses, providers and clients. Also products and stock. Print Statistic Reports.

This application is released as an open source project for educational purposes. Uses Rails 5, React, Tailwind CSS, Device, Simple_Form, Prawn, PaperClip and ActiveAdmin.' %></p>
                      <%= link_to t("helpers.links.sign_up"), new_user_registration_path, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded text-lg" %>
                      <div class="mt-12">
                          <%= link_to image_tag("github.png"), "https://github.com/papayalabs/pymenta" %>
                      </div>
                </div>
            </div>
        </div>
    </section>

    <section id="tour" class="py-20 bg-gray-100">    
        <div class="container mx-auto px-4">
            <div class="flex justify-center">
                <div class="lg:w-2/3 text-center">
                    <h1 class="text-3xl font-bold mb-12"><%= t('.tour', :default => t("layouts.home.tour")) %></h1>
                    <%= video_tag "Tour.mp4", class: "video-js vjs-default-skin mx-auto", size: "1164x628", controls: true, autobuffer: true %>
                </div>
            </div>
        </div>
    </section>
        
    <section id="pricing" class="py-20">
        <div class="container mx-auto px-4">
            <div class="flex justify-center">
                <div class="lg:w-2/3 text-center">
                    <h1 class="text-3xl font-bold mb-12"><%= t('.prices', :default => t("layouts.home.prices")) %></h1>
                    <div class="max-w-md mx-auto">
                        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                            <div class="bg-blue-500 text-white text-center py-4">
                                <h2 class="text-2xl font-bold"><%= t('.free', :default => t("layouts.home.free")) %></h2>
                            </div>
                            <div class="py-8 px-6">
                                <div class="text-center">
                                    <span class="text-4xl font-bold"><%= t('.free', :default => t("layouts.home.free")) %></span>
                                </div>
                                <ul class="mt-8 space-y-4">
                                    <li class="flex items-center">
                                        <svg class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        <span class="ml-3"><%= t('.unlimited-invoices', :default => t("layouts.home.unlimited-invoices")) %></span>
                                    </li>
                                    <li class="flex items-center">
                                        <svg class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        <span class="ml-3"><%= t('.unlimited-providers', :default => t("layouts.home.unlimited-providers")) %></span>
                                    </li>
                                    <li class="flex items-center">
                                        <svg class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        <span class="ml-3"><%= t('.free-retentions', :default => t("layouts.home.free-retentions")) %></span>
                                    </li>
                                </ul>
                                <div class="mt-8">
                                    <%= link_to t("helpers.links.sign_up"), new_user_registration_path, class: "w-full block text-center bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
        
    <section id="contact" class="py-20 bg-gray-800 text-white">
        <div class="container mx-auto px-4">
            <div class="flex justify-center">
                <div class="lg:w-2/3 text-center">
                    <h2 class="text-3xl font-bold mb-6"><%=t '.contact' %></h2>
                    <p class="text-xl mb-4"><%=t '.contact_description' %></p>
                    <p class="text-xl mb-8"><%=t '.email' %></p>
                    <div class="flex flex-wrap justify-center gap-4">
                        <a href="https://twitter.com/papayalabs" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                            <i class="fa fa-twitter fa-fw"></i> <span>Twitter</span>
                        </a>
                        <a href="https://github.com/papayalabs" class="bg-blue-400 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded">
                            <i class="fa fa-github fa-fw"></i> <span>Github</span>
                        </a>
                        <a href="https://facebook.com" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            <i class="fa fa-facebook fa-fw"></i> <span>Facebook</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-gray-900 text-white py-8">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row justify-between">
                <div class="mb-4 md:mb-0">
                    <%= t('.copyright', :default => t("layouts.home.copyright")) %><a target="_blank" href="http://papayalabs.github.io" title="Lapapaya" class="text-blue-400 hover:text-blue-300"><%= t('.companyname', :default => t("layouts.home.companyname")) %>
                    </a>. <%= t('.allrightreserved', :default => t("layouts.home.allrightreserved")) %>
                </div>
                <div>
                    <ul class="flex space-x-4">
                        <li><%= link_to t('.termsofservice', :default => t("helpers.home.termsofservice")), terms_path, class: 'text-gray-300 hover:text-white'  %></li>
                        <li><%= link_to t('.privacypolicy', :default => t("helpers.home.privacypolicy")), privacy_path, class: 'text-gray-300 hover:text-white'  %></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCRngKslUGJTlibkQ3FkfTxj3Xss1UlZDA&sensor=false"></script>
    
    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
        
        // Video.js plugin
        (function(vjs) {
          var
            /**
             * Copies properties from one or more objects onto an original.
             */
            extend = function(obj /*, arg1, arg2, ... */) {
              var arg, i, k;
              for (i = 1; i < arguments.length; i++) {
                arg = arguments[i];
                for (k in arg) {
                  if (arg.hasOwnProperty(k)) {
                    obj[k] = arg[k];
                  }
                }
              }
              return obj;
            },
            // define some reasonable defaults for this sweet plugin
            defaults = {
              autoDisable: false
            },
            // plugin initializer
            disableProgress = function(options) {
              var
                // save a reference to the player instance
                player = this,
                state = false,
                // merge options and defaults
                settings = extend({}, defaults, options || {});
              // disable / enable methods
              player.disableProgress = {
                disable: function() {
                    state = true;
                    player.controlBar.progressControl.seekBar.hide();
                },
                enable: function() {
                    state = false;
                },
                getState: function(){
                  return state;
                }
              };
              if(settings.autoDisable)
              {
                player.disableProgress.disable();
              }
            };
          // register the plugin with video.js
          vjs.plugin('disableProgress', disableProgress);
        }(window.videojs));
        
        var
          // save a reference to the video element
          video = document.querySelector('video'),
          // save a reference to the video.js player for that element
          player = videojs(video);
          // Here is where you initialize the plugin, passing in autoDisable
          // autoDisable: true ==> The ProgressBar is hide
          // autoDisable: false ==> The ProgressBar work normally
          player.disableProgress({
            autoDisable: true
          });
    </script>
    
    <%= javascript_include_tag 'application' %>
</body>

</html>