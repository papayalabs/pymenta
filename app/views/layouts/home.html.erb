    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="assets/ios/AppIcon.appiconset/Icon-App-76x76@2x.png">
    <!-- iPad (with @2× display) iOS ≤ 6 -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="assets/ios/AppIcon.appiconset/Icon-App-72x72@2x.png">
    <!-- iPhone (with @2× and @3 display) iOS ≥ 7 -->
    <link rel="apple-touch-icon-precomposed" sizes="120x120" href="assets/ios/AppIcon.appiconset/Icon-App-60x60@2x.png">
